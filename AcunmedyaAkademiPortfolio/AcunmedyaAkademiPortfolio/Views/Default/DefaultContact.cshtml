@model List<AcunmedyaAkademiPortfolio.Models.TblContact>

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>Benimle aşağıdaki formdan iletişime geçebilirsiniz</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <!-- Contact Information -->
            <div class="col-lg-5">
                <div class="info-wrap">
                    @foreach (var item in Model)
                    {
                        <!-- Address Section -->
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                            <i class="bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h3>Adres</h3>
                                <p>@item.Address</p>
                            </div>
                        </div><!-- End Info Item -->

                        <!-- Phone Section -->
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-telephone flex-shrink-0"></i>
                            <div>
                                <h3>Bizi Arayın</h3>
                                <p>@item.Phone</p>
                            </div>
                        </div><!-- End Info Item -->

                        <!-- Email Section -->
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h3>Email Adresimiz</h3>
                                <p>@item.Email</p>
                            </div>
                        </div><!-- End Info Item -->

                        <!-- Map Section -->
                <div class="map-container" data-aos="fade-up" data-aos-delay="500">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d896.5238574861781!2d29.189905527519166!3d40.904021306105!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac486baadb445%3A0x3c75e9a3450ae76e!2sEsentepe%2C%20Toros%20Cd.%2C%2034870%20Kartal%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1737402171028!5m2!1str!2str"
                            width="300"
                            height="300"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>

                </div><!-- End Map Section -->
                    }
                </div><!-- End Info Wrap -->
            </div><!-- End Col-lg-5 -->
            <!-- Contact Form -->
            <div class="col-lg-7">
                @Html.Action("SendMessage")
            </div><!-- End Col-lg-7 -->

        </div><!-- End Row -->
    </div><!-- End Container -->

</section><!-- End Contact Section -->
