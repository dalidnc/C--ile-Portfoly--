@model List<AcunmedyaAkademiPortfolio.Models.TblSkill>
@{
    int sayac = 0;
}


<section id="skills" class="skills section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Yeteneklerim</h2>
        <p>Aşağıda, sahip olduğum yazılım dillerindeki yetkinlik seviyelerim yüzdelik olarak belirtilmiştir</p>
