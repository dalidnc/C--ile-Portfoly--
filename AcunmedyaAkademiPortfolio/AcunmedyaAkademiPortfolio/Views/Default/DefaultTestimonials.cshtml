@model List<AcunmedyaAkademiPortfolio.Models.TblTestimonial>
<section id="testimonials" class="testimonials section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Referanslar</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Take(3))
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>@item.Comment</span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                            <img src="@item.ImagineUrl" class="testimonial-img" alt="">
                            <h3>@item.Name</h3>
                            <h4>@item.Title</h4>
                        </div>
                    </div><!-- End swiper-slide -->
                }
            </div><!-- End swiper-wrapper -->
            <!-- Pagination -->
            <div class="swiper-pagination"></div>
        </div><!-- End swiper-container -->

    </div>

</section><!-- /Testimonials Section -->
<!-- Swiper JS Configuration -->
<script type="application/json" class="swiper-config">
    {
        "loop": true,
        "speed": 600,
        "autoplay": {
            "delay": 5000
        },
        "slidesPerView": 3,  // Üç öğe yan yana
        "spaceBetween": 30,  // Öğeler arasındaki mesafe
        "pagination": {
            "el": ".swiper-pagination",
            "type": "bullets",
            "clickable": true
        },
        "breakpoints": {
            "320": {
                "slidesPerView": 1,
                "spaceBetween": 40
            },
            "1200": {
                "slidesPerView": 3,
                "spaceBetween": 30
            }
        }
    }
</script>

<!-- Swiper CSS Düzenlemeleri -->
<style>
    .swiper-container {
        width: 100%;
        height: 100%;
    }

    .swiper-wrapper {
        display: flex;
    }

    .swiper-slide {
        flex: 0 0 auto; /* Öğelerin yan yana olmasını sağlar */
        width: 33.33%; /* Her bir öğe ekranın 1/3'ünü kaplar */
    }

    .testimonial-item {
        padding: 20px;
        text-align: center;
    }

    .testimonial-img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 15px;
    }
</style>
